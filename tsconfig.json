{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": [
    "node_modules",
    "vendored",
    "build",
    "coverage",
    "assets"
  ],
  "include": [
    "src",
    ".plasmo/index.d.ts",
    ".plasmo/**/*",
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "compilerOptions": {
    "paths": {
      "~*": [
        "./src/*"
      ]
    },
    "module": "ES6",
    "target": "ES6",
    "baseUrl": ".",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  }
}